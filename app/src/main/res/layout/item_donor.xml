<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mini">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:padding="@dimen/padding_default"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_user"
                    android:layout_width="@dimen/icon_normal"
                    android:layout_height="@dimen/icon_normal"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_mini"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_male" />

                <com.styx.gta.donorblood.ui.widget.FontTextView
                    android:id="@+id/tv_blood_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/padding_mini"
                    app:font="@string/font_gothic_bold"
                    tools:text="Blood Group" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:orientation="vertical">

                <com.styx.gta.donorblood.ui.widget.FontTextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_mini"
                    android:textSize="@dimen/font_16"
                    app:font="@string/font_gothic_bold"
                    tools:text="Name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.styx.gta.donorblood.ui.widget.FontTextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_mini"
                        app:font="@string/font_gothic_bold"
                        tools:text="Age" />

                    <com.styx.gta.donorblood.ui.widget.FontTextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/padding_mini"
                        app:font="@string/font_gothic_bold"
                        tools:text="Sex" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_call_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_mini"
                    android:background="@color/green"
                    android:orientation="horizontal"
                    android:elevation="2dp"
                    android:weightSum="10">


                    <com.styx.gta.donorblood.ui.widget.FontTextView
                        android:id="@+id/tv_contact"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:padding="@dimen/padding_mini"
                        android:textAlignment="center"
                        app:font="@string/font_gothic_bold"
                        tools:text="Phone Number" />

                    <ImageView
                        android:id="@+id/iv_call_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="@dimen/padding_mini"

                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_call_black_24px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>